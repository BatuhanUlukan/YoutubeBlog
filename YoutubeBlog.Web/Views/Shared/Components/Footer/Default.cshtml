@using YoutubeBlog.Entity.DTOs.Logos
@model HeaderModel
<div class="footer-inner">
    <div class="footer-container tt-wrap">
        <div class="row">
            <div class="col-sm-12 col-md-3">

                <!-- Begin footer block (logo) -->
                <div class="footer-block">
                    <div class="f-block-logo">

                        <!-- Begin logo
                        ================ -->
                        <!-- logo images for big screens -->
                        @foreach (var image in Model.Logos.LogoImages)
                        {
                            <span><img src="/assets/images/@image.FileName" title="@Model.Logos.Title" alt="@Model.Logos.Slug"></span>
                        }

                    </div>
                </div>
                <!-- End footer block -->

            </div> <!-- /.col -->

            <div class="col-sm-4 col-md-2">

                <!-- Begin footer block (links) -->
                <div class="footer-block">                                                                    
                    <h4 class="f-block-heading">Menu</h4>
                    <ul class="f-block-links">
                        <li><a  href="/">Home</a></li>
                        <li><a asp-controller="Portfolio" asp-action="Index">Portfolio</a></li>
                        <li><a asp-controller="Home" asp-action="Index">Blog</a></li>
                        <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                    </ul>
                </div>
                <!-- End footer block -->

            </div> <!-- /.col -->

            <div class="col-sm-4 col-md-2">

                <!-- Begin footer block (social) -->
                <div class="footer-block">
                    <h4 class="f-block-heading">Follow</h4>
                    <ul class="f-block-links">
                        @foreach (var item in Model.Socials)
                        {
                            <li><a href="@item.Link" target="_blank">@item.Name</a></li>
                        }

                    </ul>
                </div>
                <!-- End footer block -->

            </div> <!-- /.col -->

            <div class="col-sm-4 col-md-3">

                <!-- Begin footer block (text) -->
                <div class="footer-block">
                    <h4 class="f-block-heading">Contact</h4>
                    <div class="f-block-text">
                        @foreach (var item in Model.Headquarters)
                        {
                            if (item.Choosen)
                            {
                                <p>
                                    @item.Address<br />
                                    @item.PhoneNumber<br />
                                    <a href="mailto:@item.Email">@item.Email</a>
                                </p>
                            }
                            else
                            {
                                
                            }
                        }

                    </div>
                </div>
                <!-- End footer block -->

            </div> <!-- /.col -->

        </div> <!-- /.row -->
    </div> <!-- /.footer-container -->
    <!-- Begin footer bottom -->
    <div class="footer-bottom">
        <div class="footer-container tt-wrap">
            <div class="row">
                <div class="col-md-6">

                    <!-- Begin footer copyright -->
                    <div class="footer-bottom-col-left">
                        &copy; Aivo / All rights reserved
                    </div>
                    <!-- End footer copyright -->

                </div> <!-- /.col -->

                <div class="col-md-6">

                    <div class="footer-bottom-col-right">
                        Design by: <a href="https://themeforest.net/item/aivo-multipurpose-portfolio-html-website-template/21587861?ref=Themetorium" target="_blank">Themetorium</a>
                    </div>

                </div> <!-- /.col -->

            </div> <!-- /.row -->
        </div> <!-- /.footer-container -->
    </div>
    <!-- End footer bottom -->

</div> <!-- /.footer-inner -->
<!-- Scroll to top button -->
<a href="#body" class="scrolltotop sm-scroll" title="Scroll to top"></a>

