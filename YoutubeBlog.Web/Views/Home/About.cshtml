@using YoutubeBlog.Entity.Entities;
@model AppUser

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>About Me - @Model.FirstName @Model.LastName</title>
    <meta name="title" content="@Model.FirstName @Model.LastName" />
    <link rel="icon" href="favicon.ico" type="image/x-icon">
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    @await Component.InvokeAsync("CSS")
</head>
<body id="body" class="animsition tt-boxed">
    <header id="header" class="header-show-hide-on-scroll menu-align-right">
        <div class="header-inner tt-wrap">
            @await Component.InvokeAsync("Header")
        </div>
    </header>
    <div id="body-content">
        <section id="page-header">

            <div class="page-header-image parallax-6 bg-image" style="background-image: url(&quot;/assets/aboutheader.png&quot;); top: -82.5px; bottom: -82.5px;">

                <div class="cover cover-opacity-5"></div>

            </div>

            <div class="page-header-inner tt-wrap">

                <div class="page-header-caption ph-cap-xlg ph-cap-light ph-cap-shadow parallax-5 fade-out-scroll-4">
                    <div class="ph-title-wrap">
                        <h1 class="page-header-title">About Me</h1>
                    </div>
                    <div class="ph-subtitle-wrap">
                        <h2 class="page-header-subtitle">Let Me Introduce Myself</h2>
                    </div>

                    <div class="zig-zag-separator zig-zag-lg">
                        <span></span>
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                </div>
            </div>

        </section>

        <section id="about-me-section" class="about-me-style-1">
            <div class="about-me-inner">

                <div class="split-box">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="row-lg-height">

                                @if (Model.UserImagess.Any())
                                {

                                    var imageUrl = "/assets/images/" + @Model.UserImagess.FirstOrDefault()?.FileName.Replace('\\', '/');

                                    <div class="col-lg-6 col-lg-height split-box-image no-padding bg-image" style="background-image: url('@imageUrl');">

                                        <div class="sbi-height full-height-vh"></div>

                                    </div>


                                }
                                else
                                {
                                    <div class="col-lg-6 col-lg-height split-box-image no-padding bg-image" style="background-image: url('/assets/egg.webp');">


                                        <div class="sbi-height full-height-vh"></div>

                                    </div>
                                }

                                <div class="col-lg-6 col-lg-height col-lg-middle no-padding">                                                                         


                                    <div class="split-box-content sb-content-right">


                                        <div class="tt-heading tt-heading-xlg">
                                            <div class="tt-heading-inner">
                                                <h1 class="tt-heading-title">@Model.FirstName @Model.LastName</h1>
                                                <div class="tt-heading-subtitle"></div>


                                                <div class="zig-zag-separator">
                                                    <span></span>
                                                    <span></span>
                                                    <span></span>
                                                    <span></span>
                                                </div>


                                            </div>
                                        </div>


                                        <div class="split-box-content-text">
                                            <p>@Html.Raw(Model.About)</p>
                                        </div>


                                    </div>
                                    <!-- End split box content -->

                                </div> <!-- /.col -->

                            </div> <!-- /.row-height -->
                        </div> <!-- /.row -->
                    </div> <!-- /.container -->
                </div>
                <!-- End split box -->

            </div> <!-- /.about-me-inner -->
        </section>

        @if (Model.Duties.Any())
        {
            <section id="services-section" class="services-style-2 bg-dark-2 ss-light bg-image" style="background-image: url(/basehtml/aivo/assets/img/misc/services-1.jpg);">


                <div class="cover cover-opacity-8-5"></div>

                <div class="services-inner tt-wrap">
                    <div class="row">
                        <div class="col-lg-4">


                            <div class="tt-heading tt-heading-xxlg">
                                <div class="tt-heading-inner">
                                    <h1 class="tt-heading-title">Things I Do Well</h1>
                                    <div class="tt-heading-subtitle">My Services</div>


                                    <div class="zig-zag-separator zig-zag-light">
                                        <span></span>
                                        <span></span>
                                        <span></span>
                                        <span></span>
                                    </div>
                                    <!-- End zig-zag separator -->
                                    @if ( Model.Email == "superadmin@gmail.com" )
                                    {
                                        <a asp-action="Index" asp-controller="Portfolio" class="btn btn-primary margin-top-20">View My Work</a>
                                    }
                                    else
                                    {

                                    }


                                </div> <!-- /.tt-heading-inner -->
                            </div>
                            <!-- End tt-heading -->

                        </div> <!-- /.col -->

                        <div class="col-lg-8">

                            <div class="info-box-wrap ib-style-2 ib-icon-bg-shape">

                                <div class="row">
                                    @foreach (var item in Model.Duties)
                                    {
                                        <div class="col-sm-6">

                                            <!-- Begin info box -->
                                            <div class="info-box">
                                                <span class="info-box-icon"><span class="lnr lnr-@item.Icon"></span></span>
                                                <div class="info-box-info">
                                                    <h3 class="info-box-heading"><span>@item.Name</span></h3>
                                                    <div class="info-box-text tt-ellipsis ddd-truncated" style="overflow-wrap: break-word;">
                                                        @Html.Raw(item.Content)
                                                    </div>
                                                </div> <!-- /.info-box-info -->
                                            </div>
                                            <!-- End info box -->

                                        </div> <!-- /.col -->
                                    }

                                </div> <!-- /.row -->

                            </div>
                            <!-- End info box wrap -->

                        </div> <!-- /.col -->
                    </div> <!-- /.row -->

                </div> <!-- /.services-inner -->
            </section>

        }
        <!-- End about me section -->
        <section id="footer" class="footer-dark no-margin-top">
            @await Component.InvokeAsync("Footer")
        </section>
    </div>
    @await Component.InvokeAsync("JS")
</body>
</html>
