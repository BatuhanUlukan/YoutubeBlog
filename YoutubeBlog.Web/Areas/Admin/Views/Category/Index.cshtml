@using YoutubeBlog.Entity.DTOs.Categories
@model List<CategoryDto>

<!-- DataTables CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.2/css/uikit.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.uikit.min.css" />

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 mb-30">
            <div class="card">
                <div class="card-header color-dark fw-500">
                    Kategori Yönetimi  //   
                    <a style="margin-top:12px; margin-right:auto; margin-left:5px;" class="btn btn-sm btn-success mb-2" asp-area="Admin" asp-controller="Category" asp-action="Add">
                        Kategori Ekle <i class="bx bx-plus"></i>
                    </a>
                </div>

                <div class="card-body">

                    @if (Model == null || !Model.Any())
                    {
                        <div class="atbd-empty text-center">
                            <div class="atbd-empty__image">

                                <img src="~/Admin/img/folders/1.svg" alt="Admin Empty">

                            </div>
                            <div class="atbd-empty__text">

                                <p class="">No Data</p>

                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="card">
                            <div class="text-nowrap m-5">


                                <table class="uk-table uk-table-hover uk-table-striped w-90 border-5" style="width:100%" id="Table">
                                    <thead>
                                        <tr>
                                            <th class="text-center">Kategori İsmi</th>
                                            <th class="text-center">Olusturan</th>
                                            <th class="text-center">Olusturma Tarihi</th>
                                            <th class="text-center">İşlemler</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var category in Model)
                                        {
                                            <tr name="@category.Id">
                                                <td style="vertical-align: middle; text-align: center;">@category.Name</td>
                                                <td style="vertical-align: middle; text-align: center;">@category.CreatedBy</td>
                                                <td style="vertical-align: middle; text-align: center;">@category.CreatedDate.ToShortDateString()</td>
                                                <td style="vertical-align: middle; text-align: center;">
                                                    <!-- This ensures content inside the TD is vertically centered -->
                                                    <div class="d-flex justify-content-center align-items-center">
                                                        <!-- Bootstrap 4 Primary Button -->
                                                        <a class="btn btn-primary btn-sm mr-2" asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-secName="@category.SecName">
                                                            Update
                                                        </a>

                                                        <!-- Bootstrap 4 Danger Button -->
                                                        <a class="btn btn-danger btn-sm" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-secName="@category.SecName">
                                                            Delete
                                                        </a>
                                                    </div>
                                                </td>



                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th class="text-center">Kategori İsmi</th>
                                            <th class="text-center">Olusturan</th>
                                            <th class="text-center">Olusturma Tarihi</th>
                                            <th class="text-center">İşlemler</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    }
                </div>
                <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
                <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
                <script src="https://cdn.datatables.net/1.13.6/js/dataTables.uikit.min.js"></script>

                <script>
                    new DataTable('#Table');
                </script>


            </div><!-- End: .userDatatable -->

        </div>
    </div>
</div>