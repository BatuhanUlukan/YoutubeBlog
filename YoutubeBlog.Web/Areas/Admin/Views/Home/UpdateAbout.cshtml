@using YoutubeBlog.Entity.DTOs.Abouts;
@model AboutUpdateDto
<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">About Yönetimi /</span> About  Güncelle
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <form asp-controller="Home" asp-action="UpdateAbout" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                        <input type="hidden" asp-for="Name" />
                        <div class="form-group">
                            <label asp-for="Name2" id="defaultFormControlInput" class="form-label">Hakkında Baslık</label>
                            <input asp-for="Name2" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Hakkında Baslık" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Name2" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Content" id="defaultFormControlInput" class="form-label">Hakkkında İçerik Baslık</label>
                            <input asp-for="Content" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Hakkında İçerik Başlığı" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SubContent" id="defaultFormControlInput" class="form-label">Hakkkında Ana İçerik</label>
                            <input asp-for="SubContent" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Hakkında Ana İçeriği" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="SubContent" class="text-danger"></span>
                        </div>

                        <div class="row" style="margin-left:10px;">
                            <input type="hidden" asp-for="Id" />
                        </div>
                        @if (Model.AboutImages != null && Model.AboutImages.Any())
                        {
                            <label>Sahip Olunan Resimler</label>
                            <br />

                            <div class="row mb-3">
                                @foreach (var image in Model.AboutImages)
                                {
                                    <div class="col-md-2 mb-1">
                                        <img src="/assets/images/@image.FileName" alt="@Model.Name" class="img-thumbnail">
                                    </div>
                                }
                            </div>
                        }

                        <div style="margin-left:-15px;" class="card-body">
                            <div class="atbd-tag-wrap">

                                <div class="atbd-upload">
                                    <div class="atbd-upload__button">
                                        <a href="javascript:void(0)" class="btn btn-lg btn-outline-lighten btn-upload" onclick="$('#imageInput').click()">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-upload">
                                                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                                                <polyline points="17 8 12 3 7 8"></polyline>
                                                <line x1="12" y1="3" x2="12" y2="15"></line>
                                            </svg>
                                            Click to Upload
                                        </a>
                                        <input asp-for="Photos" type="file" accept="image/*" class="upload-one" id="imageInput" multiple style="display: none;">
                                    </div>
                                    <div class="atbd-upload__file">
                                        <ul></ul>
                                    </div>
                                </div>
                                <span asp-validation-for="Photos" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-sm">Kaydet</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
