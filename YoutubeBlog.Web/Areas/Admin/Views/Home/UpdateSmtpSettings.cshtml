@using YoutubeBlog.Entity.DTOs.SmtpSettings;
@model SmtpSettingsUpdateDto
<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Sayfa SMTP Yönetimi /</span> Sayfa SMTP Güncelle
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <form asp-area="Admin" asp-controller="Home" asp-action="UpdateSmtpSettings" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="ServerIP" id="defaultFormControlInput" class="form-label">ServerIP</label>
                            <input asp-for="ServerIP" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen ServerIP giriniz." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="ServerIP" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SMTPPort" id="defaultFormControlInput" class="form-label">SMTPPort</label>
                            <input asp-for="SMTPPort" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen SMTPPort giriniz." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="SMTPPort" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="IMAPPort" id="defaultFormControlInput" class="form-label">IMAPPort</label>
                            <input asp-for="IMAPPort" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen IMAPPort giriniz." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="IMAPPort" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="IncomingServer" id="defaultFormControlInput" class="form-label">IncomingServer</label>
                            <input asp-for="IncomingServer" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen IncomingServer giriniz." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="IncomingServer" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="OutgoingServer" id="defaultFormControlInput" class="form-label">OutgoingServer</label>
                            <input asp-for="OutgoingServer" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen OutgoingServer giriniz." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="OutgoingServer" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Username" id="defaultFormControlInput" class="form-label">Username</label>
                            <input asp-for="Username" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen Username giriniz." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" id="defaultFormControlInput" class="form-label">Password</label>
                            <input asp-for="Password" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen Passwordgiriniz." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-sm">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
