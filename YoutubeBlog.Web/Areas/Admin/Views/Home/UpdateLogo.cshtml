@using YoutubeBlog.Entity.DTOs.Logos;
@model LogoUpdateDto
<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Logo Yönetimi /</span> Logo  Güncelle
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <form asp-controller="Home" asp-action="UpdateLogo" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Title" />
                        <div class="form-group">
                            <label asp-for="Slug" id="defaultFormControlInput" class="form-label">Logo Baslık</label>
                            <input asp-for="Slug" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen sayfa içerik giriniz." aria-describedby="defaultFormControlHelp" readonly>
                            <span asp-validation-for="Slug" class="text-danger"></span>
                        </div>
                        <br>
                        @if (Model.LogoImages != null && Model.LogoImages.Any())
                        {
                            <div class="row" style="margin-left:10px;">
                                <input type="hidden" asp-for="Id" />
                                <label>Sahip Olunan Resimler</label>
                            </div>

                            <div class="row mb-3">
                                @if (Model.LogoImages != null && Model.LogoImages.Any())
                                {
                                    foreach (var image in Model.LogoImages)
                                    {
                                        <div class="col-md-2 mb-1">
                                            <img src="~/assets/images/@image.FileName" alt="@Model.Title" class="img-thumbnail">
                                        </div>
                                    }
                                }
                            </div>
                        }
                        <div style="margin-left:-15px;" class="card-body">
                            <div class="atbd-tag-wrap">

                                <div class="atbd-upload">
                                    <div class="atbd-upload__button">
                                        <a href="javascript:void(0)" class="btn btn-lg btn-outline-lighten btn-upload" onclick="$('#imageInput').click()">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-upload">
                                                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                                                <polyline points="17 8 12 3 7 8"></polyline>
                                                <line x1="12" y1="3" x2="12" y2="15"></line>
                                            </svg>
                                            Click to Upload
                                        </a>
                                        <input asp-for="Photos" type="file" accept="image/*" class="upload-one" id="imageInput" multiple style="display: none;">
                                    </div>
                                    <div class="atbd-upload__file">
                                        <ul></ul>
                                    </div>
                                </div>
                                <span asp-validation-for="Photos" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-sm">Kaydet</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
